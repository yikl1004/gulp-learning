/* beautysquare.css */

@charset 'utf-8';

body.sub {
	background:#ececec;
}

body.sub #wrap {
	margin-top:20px;
}

/* 웹뷰  더미 이미지 */
img {
    max-width: 100%;
}


/* 버튼 스타일 */
.btn {
    display: inline-block;
    padding: 5px 18px 5px;
    border-width: 1px;
    border-style: solid;
    color: #fff;
    font-size: 13px;
    line-height: 1;
    text-align: center;
}
.btn.st1 {
    border-color: #fff;
}


/* 가로형 버튼 (2개 이상) */

ul.hori_btns {
    display: table;
    width: 100%;
}
ul.hori_btns.col2 li {
    display: table-cell;
    width: 50%;
}
ul.hori_btns li a {
    display: block;
    position: relative;
    text-align: center;
    background: #fff;
    padding: 9px 0 12px 0;
    border-bottom: 1px solid #c1c1c1;
}
ul.hori_btns li a:before {
    content: '';
    width: 1px;
    height: 29px;
    background: #ececec;
    position: absolute;
    top: 5px;
    left: 0;
}
ul.hori_btns li a .count {
    color: #f96365;
    display: inline-block;
    margin-left: 3px;
}


/* 웹뷰 그림자 */
.wv_shadow {
    width: 100%;
    height: 3px;
    display: block;
    background: url(/publish/img/com/webview_shadow.png);
    background-size: 1px 3px;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 9999;
}

/* 그림자 */
.shadow {
    border-bottom: 1px solid #cecece;
}


/* SECTION DEPTH */

#container {
    margin: 0 3.125%;
}

.section {
    margin-top: 23px;
}


/* TITLE DEPTH */

.tit {
    font-size: 17px;
    font-weight: bold;
}

.tit:after {
    content: '';
    display: block;
    clear: both;
}

/*.tit > span {float:left;}*/

.tit .all_view {
    height: 100%;
    font-size: 13px;
    line-height: 19px;
    float: right;
    font-weight: normal;
}

.tit .all_view span {
    vertical-align: middle;
}

.tit .all_view:after {
    content: '';
    display: inline-block;
    width: 10px;
    height: 19px;
    background: url(/publish/img/ico/ico_arrow_r.png) 100% 3px no-repeat;
    -webkit-background-size: 7px 12px;
    background-size: 7px 12px;
    vertical-align: middle;
    margin-left: 4px;
}

h2.tit {
    text-indent: 6px;
    margin-bottom: 10px;
}

#wrap {
    width: 100%;
    position: relative;
    padding-bottom: 30px;
}


/*********************
	간편모드 - 메인
**********************/


